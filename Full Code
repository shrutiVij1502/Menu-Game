x= os.system('zenity --question --text="where u want to run ur program local/remote:" --no-wrap --ok-label="local" --cancel-label="remote"')
print(x)
if x == 256 :
	x = "remote"
else:
	
	x = "local"


myhost = x
print(myhost)
if myhost =="remote":
	remote_ip=subprocess.getoutput('zenity --entry --title=remote --text="Enter ur remote host ip:"')
	

while True:
	y=subprocess.getstatusoutput('zenity --entry --title="enter your choice" --text="Enter 1 : for fun\nEnter 2 : To play Quiz \nEnter 3 : To read story \nenter 4 : To see fibonacci series\nEnter 5 : Mail Service \nEnter 6 : Exit " 2>/dev/null')
	y1 = int(y[1])
	
	ch = y1
	if myhost=="local":
		if  int(ch) ==1:
			shruti()
		elif int(ch) ==2:
			Riddhi()
		elif int(ch) ==3:
			os.system('zenity --info --no-wrap --text={} --title="story" 2>dev/null'.format(story_xyz()))
		elif int(ch)==4:
			os.system('zenity --info --no-wrap --text="{}" --title="Fibonacci series"  2>/dev/null'.format(fib()))
		elif int(ch)==5:
			mailshruti()			
		elif int(ch) ==6:
			exit()
		else:
			print("not supported")		
			
	if myhost=="remote":
		if  ch == 1:
			os.system("ssh {} date".format(remote_ip))
		elif int(ch) ==2:
			os.system("ssh {} cal".format(remote_ip))
		elif int(ch) ==3:
			os.system("ssh {} ls".format(remote_ip))
		elif int(ch) ==4:
			os.system("ssh {} mkdir".format(remote_ip))
		elif int(ch) ==5:
			os.system("ssh {} exit".format(remote_ip))
		else:
			print("not supported")
	input("print enter to cont...")
	os.system("clear")
